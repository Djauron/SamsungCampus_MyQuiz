{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="row">

        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ user.username }}</h3>
                </div>
                <div class="panel-body">
                    <div class="row">

                        <div class="col-md-9 col-lg-9 divCenter">
                            <table class="table table-user-information">
                                <tbody>
                                <tr>
                                    <td>Pseudo :</td>
                                    <td>{{ user.username }}</td>
                                </tr>
                                <tr>
                                    <td>Derniere Connexion :</td>
                                    <td>a faire</td>
                                </tr>
                                <tr>
                                <tr>
                                    <td>Email :</td>
                                    <td>{{ user.email }}</td>
                                </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <a href="/profile/edit" data-original-title="Edit this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i></a>
                    <a data-original-title="Remove this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                    <a href="/profile/change-password" class="btn btn-success">Changer le mot de passe</a>
                </div>
            </div>
        </div>
    </div>
</div>


