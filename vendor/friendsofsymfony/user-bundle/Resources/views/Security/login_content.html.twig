{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
    <h1 class="form-signin-heading text-muted">Log In</h1>
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}


    <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="Pseudo"/>


    <input type="password" class="form-control" id="password" name="_password" required="required" placeholder="Password"/>

    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
    <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>

    <input type="submit" class="btn btn-lg btn-primary btn-block" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
</form>
{% if error %}
    <div class="container-alert">
        <p class="alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</p>
    </div>
{% endif %}

<a class="noAccount" href="{{ path('fos_user_resetting_request') }}">Mot de passe oublie ?</a>
<br>
<a class="noAccount" href="/register">Vous n'avez pas de compte ?</a>